
<!DOCTYPE html>
<html>
<head>
  <title>Dice Roll</title>
</head>
<body>


<h1>1d20</h1>
<ul>
  <%  @rolls.each do |a_roll| %>
    <li>
      <%= a_roll %>
<% if a_roll == 1 %>
  <p style="color: red"><%= @rolls %></p>
<% elsif a_roll == 20 %>
  <p style="color: green"><%= @rolls %></p>
<% else %>
  <p><%= @output %></p>
<% end %>
 </li>
 <% end %>
</ul>

</body>
</html>
